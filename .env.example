APP_NAME=PPDB
APP_ENV=production          # Ganti ke production
APP_KEY=                    # Biarkan kosong, akan di-generate di server
APP_DEBUG=false             # Ganti ke false untuk production
APP_URL=http://your-domain.com  # Placeholder untuk domain/IP publik server

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_TIMEZONE="Asia/Jakarta" # Penting, tambahkan jika belum ada

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug # Bisa dinaikkan ke 'info' atau 'error' di production

# --- KONFIGURASI DATABASE PRODUKSI ---
DB_CONNECTION=mysql         # Ganti dari sqlite
DB_HOST=127.0.0.1           # 127.0.0.1 jika MySQL di EC2. Ganti jika pakai RDS.
DB_PORT=3306
DB_DATABASE=nama_db_produksi # Placeholder
DB_USERNAME=user_db_produksi # Placeholder
DB_PASSWORD=                # Kosongkan, akan diisi di server

SESSION_DRIVER=database     # Disarankan tetap database atau file di awal
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# --- KONFIGURASI EMAIL PRODUKSI ---
MAIL_MAILER=smtp            # Ganti dari log
MAIL_SCHEME=tls             # Tambahkan atau pastikan sesuai
MAIL_HOST=smtp.example.com  # Placeholder host
MAIL_PORT=587
MAIL_ENCRYPTION=tls         # Tambahkan jika belum ada
MAIL_USERNAME=              # Kosongkan
MAIL_PASSWORD=              # Kosongkan
MAIL_FROM_ADDRESS="no-reply@ppdb.com" # Placeholder
MAIL_FROM_NAME="${APP_NAME}"

# --- KONFIGURASI TWILIO ---
TWILIO_SID=                 # Kosongkan
TWILIO_AUTH_TOKEN=          # Kosongkan
TWILIO_WHATSAPP_FROM=       # Kosongkan

# --- KONFIGURASI AWS (Akan diisi nanti) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"